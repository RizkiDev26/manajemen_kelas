#--------------------------------------------------------------------
# Example Environment Configuration file
#
# This file can be used as a starting point for your own .env file.
# Copy this file to '.env' and modify the values to match your environment.
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080/'
app.appTimezone = 'Asia/Jakarta'
app.indexPage = ''
app.uriProtocol = 'REQUEST_URI'

# If you have trouble with `.`, you could also use `_`.
app.cookiePrefix = ''
app.cookieDomain = ''
app.cookiePath = '/'
app.cookieSecure = false
app.cookieHTTPOnly = true
app.cookieSameSite = 'Lax'

# Encryption key - generate using: php spark key:generate
# encryption.key = 

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = manajemen_kelas
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306

# Example for remote database
# database.default.hostname = sql123.infinityfree.com
# database.default.database = if0_12345678_manajemen_kelas
# database.default.username = if0_12345678
# database.default.password = your_password

#--------------------------------------------------------------------
# CONTENT SECURITY POLICY
#--------------------------------------------------------------------

contentsecuritypolicy.reportOnly = false
contentsecuritypolicy.defaultSrc = 'self'
contentsecuritypolicy.scriptSrc = 'self' 'unsafe-inline' https://cdn.tailwindcss.com
contentsecuritypolicy.styleSrc = 'self' 'unsafe-inline' https://cdn.tailwindcss.com
contentsecuritypolicy.fontSrc = 'self'
contentsecuritypolicy.connectSrc = 'self'
contentsecuritypolicy.imgSrc = 'self' data:
contentsecuritypolicy.mediaSrc = 'self'

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

# CSRF protection
security.csrfProtection = cookie
security.tokenRandomize = true
security.tokenName = csrf_hash_name
security.headerName = X-CSRF-TOKEN
security.cookieName = csrf_cookie_name
security.expires = 7200
security.regenerate = true
security.redirect = true

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

# Session driver: files, database, redis, memcached
session.driver = files
session.cookieName = ci_session
session.expiration = 7200
session.savePath = null
session.regenerateDestroy = false
session.DBGroup = default
session.lockRetryInterval = 100
session.lockMaxRetries = 300

# Session Security
session.cookieSecure = false
session.cookieHTTPOnly = true
session.cookieSameSite = Lax

#--------------------------------------------------------------------
# CACHE
#--------------------------------------------------------------------

# Cache driver: file, redis, memcached, dummy
cache.handler = file
cache.storePath = writable/cache/
cache.ttl = 3600

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

logger.threshold = 4
logger.dateFormat = 'Y-m-d H:i:s'

#--------------------------------------------------------------------
# EMAIL
#--------------------------------------------------------------------

email.fromEmail = admin@yourschool.sch.id
email.fromName = 'Sistem Manajemen Kelas'
email.recipients = 

# SMTP Configuration
email.SMTPHost = smtp.gmail.com
email.SMTPUser = your-email@gmail.com
email.SMTPPass = your-app-password
email.SMTPPort = 587
email.SMTPCrypto = tls

#--------------------------------------------------------------------
# HONEYPOT
#--------------------------------------------------------------------

# Honeypot field name
honeypot.hidden = 'true'
honeypot.label = 'Fill This Field'
honeypot.name = 'honeypot'
honeypot.template = '<label>{label}</label><input type="text" name="{name}" value=""/>'
honeypot.container = '<div style="display:none">{template}</div>'

#--------------------------------------------------------------------
# CUSTOM SETTINGS
#--------------------------------------------------------------------

# School Information
school.name = 'Nama Sekolah Anda'
school.address = 'Alamat Sekolah'
school.phone = '021-12345678'
school.email = 'info@yourschool.sch.id'

# File Upload
upload.maxFileSize = 2048
upload.allowedTypes = 'jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx'
upload.uploadPath = 'writable/uploads/'

# Pagination
pagination.perPage = 10
pagination.maxPages = 5